<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Community.Community_Introduction">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/communityIntroduction_CIV"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginVertical="30dp"
                android:layout_gravity="center_horizontal"
                android:src="@color/colorTextWhite" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tv_border_gray"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/communityIntroduction_type"
                    android:layout_marginVertical="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mycommunity_type"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mycommunity_type"
                    android:textColor="@color/colorText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/tv_border_gray"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_marginVertical="10dp"
                    android:id="@+id/communityintroduction_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXX"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mycommunity_num"
                    android:textColor="@color/colorText" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tv_border_gray"
            android:padding="10dp"
            android:text="社区介绍"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_introduction_description"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/colorGray"
            android:padding="20dp" />

        <Button
            android:id="@+id/bt_communityintroduction"            style="@style/ButtonGreenRound"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:text="@string/communityintroduction_join"
            />
    </LinearLayout>

