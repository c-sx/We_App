<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Setting.Setting_SeekHelp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar12"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#ffaaaa"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                android:id="@+id/text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="一键求救"
                android:textColor="#000000"
                android:textSize="24sp" />

        </androidx.appcompat.widget.Toolbar>
        <LinearLayout
            android:id="@+id/tianjia"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:showDividers="end|beginning"
            android:divider="@drawable/devide_line">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="添加紧急联系人"
                    android:textSize="15dp"
                    android:gravity="center"/>

            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
           android:id="@+id/xuanze"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:showDividers="end|beginning"
            android:divider="@drawable/devide_line">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:text="选择紧急联系人"
                    android:textSize="15dp"
                    android:gravity="center"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>