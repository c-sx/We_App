<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_gift_layout"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    android:layout_margin="15dp"
    >

<RelativeLayout
    android:layout_marginTop="?attr/actionBarSize"
    android:id="@+id/task_item"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="0dp"
    android:background="@drawable/view_receive">

    <TextView
        android:id="@+id/tv_task_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="5dp"
        android:layout_marginRight="20dp"
        android:text="待领取"
        android:textSize="10dp" />

    <LinearLayout
        android:id="@+id/ll_task_center_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tv_task_state"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_task_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <TextView
                android:id="@+id/tv_task_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_task_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_task_center_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="价格：￥5.00"
        android:textSize="15dp" />

    <Button
        android:id="@+id/btn_task"
        style="@style/ButtonBlueRound"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/tv_task_money"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="领取任务"
        android:textSize="15dp" />
</RelativeLayout>
</androidx.cardview.widget.CardView>